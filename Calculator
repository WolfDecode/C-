#include <iostream>
using namespace std;
int main() {
    int a,b,c;
    cout<<"Enter first number";
    cin>>a;
    cout<<"Enter second number";
    cin>>b;
    c=a+b;
    cout<<"\nThe sum of a and b is "<<c;
    c=a-b;
    cout<<"\nThe difference of a and b is "<<c;
    c=a*b;
    cout<<"\nThe multiplication of a and b is "<<c;
    c=a/b;
    cout<<"\nThe division of a and b is "<<c;
    c=a%b;
    cout<<"\nThe modulus of a and b is "<<c;


    return 0;
}
